<UserControl x:Class="HHFO.Views.TweetFlyOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/" 
             prism:ViewModelLocator.AutoWireViewModel="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <RichTextBox Grid.Column="0"
                     Background="{StaticResource MahApps.Brushes.ThemeBackground}"
                     BorderThickness="1">
            <FlowDocument>
                <Paragraph Name ="ss">
                    <!--nameつけてVMに渡してそこで値としてRunとかを突っ込む-->
                    <Run>aaa</Run>
                </Paragraph>
            </FlowDocument>
            <RichTextBox.InputBindings>
                <KeyBinding Gesture="Ctrl + Enter" Command="{Binding SendTweet}"/>
            </RichTextBox.InputBindings>
        </RichTextBox>
        <Button Grid.Column="1"
                Content="呟く" Command="{Binding SendTweet}"></Button>
    </Grid>
</UserControl>
