<UserControl x:Class="HHFO.Views.NormalTweetsGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HHFO.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid Height="{Binding DataContext.DataGridHeight.Value, ElementName=rootControl, Mode=OneWay}"
              Width="{Binding DataContext.DataGridWidth.Value, ElementName=rootControl, Mode=OneWay}"
              VerticalScrollBarVisibility="Visible"
              HorizontalScrollBarVisibility="Visible"
              Padding="5,5,5,5"
              ItemsSource="{Binding ShowTweets}"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Name ="DataGrid" 
              IsReadOnly="True">
        <DataGrid.InputBindings>
            <KeyBinding Command="ApplicationCommands.NotACommand" Key="Enter" Modifiers="Shift"/>
            <KeyBinding Command="{Binding OpenTweetFlyOut}" Key="Enter" Modifiers="Shift"/>
        </DataGrid.InputBindings>
        <DataGrid.Columns>
            <DataGridTextColumn Header="ユーザID"
                                                Width="100"
                                                Binding="{Binding Status.User.ScreenName}">
            </DataGridTextColumn>
            <DataGridTextColumn Header="ユーザ名"
                                                Width="100"
                                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                Binding="{Binding Status.User.Name}"/>

            <DataGridTextColumn Header="ツイート"
                                                Width="500"
                                                Binding="{Binding Status.FullText}">
                <DataGridTextColumn.ElementStyle>
                    <Style>
                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    </Style>
                </DataGridTextColumn.ElementStyle>
            </DataGridTextColumn>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
