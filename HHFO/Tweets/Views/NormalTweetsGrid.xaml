<UserControl x:Class="HHFO.Views.NormalTweetsGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HHFO.Views"
             xmlns:models="clr-namespace:HHFO.Models;assembly=HHFO.Core"
             xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:reactiveInteractivity="clr-namespace:Reactive.Bindings.Interactivity;assembly=ReactiveProperty.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid Height="{Binding DataGridHeight.Value, Mode=OneWay}"
              Width="{Binding DataGridWidth.Value, Mode=OneWay}"
              VerticalScrollBarVisibility="Visible"
              HorizontalScrollBarVisibility="Visible"
              Padding="5,5,5,5"
              ItemsSource="{Binding ShowTweets}"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Name ="DataGrid" 
              SelectionMode="Extended"
              SelectionUnit="FullRow"
              IsReadOnly="True">
        <interactivity:Interaction.Triggers>
            <interactivity:EventTrigger EventName="SelectionChanged">
                <reactiveInteractivity:EventToReactiveCommand Command="{Binding SelectionChange, Mode=OneWay}" />
            </interactivity:EventTrigger>
        </interactivity:Interaction.Triggers>
        
        <DataGrid.InputBindings>
            <KeyBinding Gesture="Shift + Ctrl + Enter" Command="{Binding DataContext.SendReply, Mode=OneWay, ElementName=rootControl}"/>
        </DataGrid.InputBindings>
        <DataGrid.Columns>
            <DataGridTextColumn Header="ユーザID"
                                                Width="100"
                                                Binding="{Binding Status.User.Name}">
            </DataGridTextColumn>
            <DataGridTextColumn Header="ユーザ名"
                                                Width="100"
                                                ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                Binding="{Binding Status.User.ScreenName}"/>

            <DataGridTextColumn Header="ツイート"
                                                Width="500"
                                                Binding="{Binding Status.FullText}">
                <DataGridTextColumn.ElementStyle>
                    <Style>
                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    </Style>
                </DataGridTextColumn.ElementStyle>
            </DataGridTextColumn>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
